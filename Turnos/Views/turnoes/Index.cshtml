@model IEnumerable<Turnos.Models.turno>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/estilos.css">
</head>
<body>
    <div class="Titulo mb-2">Turnos</div>

    <div class="form-group row">
        <div class="col-12 text-center">
            <div class="row justify-content-around">
                <div class="col-12 col-sm-9 col-md-3">
                    <input class="btn btn-warning btn-block" type="button" name="cancel" value="Volver al menú principal" onClick="window.location='/';" />
                </div>
                <div class="col-12 col-sm-9 col-md-2">
                    <input class="btn btn-success btn-block" type="button" name="cancel" value="Nuevo Turno" onClick="window.location='/turnoes/Create';" />
                </div>
            </div>
        </div>
    </div>

    <table class="table text-center">
        <tr>
            <th>
                Paciente
            </th>
            <th>
                Profesional
            </th>
            <th>
                Turno
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.paciente.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.profesional.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idTurno }) |
                @Html.ActionLink("Details", "Details", new { id = item.idTurno }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idTurno })
            </td>
        </tr>
        }

    </table>
</body>
</html>
