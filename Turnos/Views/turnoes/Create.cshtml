@model Turnos.Models.paciente
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/estilos.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <div class="Titulo">Alta de Turno</div>
            <div class="form-group row">
                <div class="col-12 col-md-6 mb-3">
                    Paciente*
                    <!-- Campo obligatorio -->
                    @Html.DropDownList("idPaciente", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idPaciente, "", new { @class = "text-danger" })
                </div>
                <div class="col-12 col-md-6 mb-3">
                    Profesional*
                    <!-- Campo obligatorio -->
                    @Html.DropDownList("idProfesional", null, htmlAttributes: new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.idProfesional, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 col-md-6 mb-3">
                    Día y horario*
                    <!-- Campo obligatorio -->
                    @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
                </div>
            </div>
            <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
            <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
            <script>$( function() {
						$( "#datepicker" ).datepicker();
					  } );</script>
            <p>Date: <input type="text" id="datepicker"></p>
            <div class="form-group row">
                <div class="col-12 text-center">
                    <div class="row justify-content-center">
                        <div class="col-12 col-sm-9 col-md-4">
                            <button class="btn btn-primary btn-block" type="submit">Dar de alta turno</button>
                        </div>
                        <div class="col-12 col-sm-9 col-md-2">
                            <input class="btn btn-grey btn-block" type="button" name="cancel" value="Cancel" onClick="window.location='/turnoes';" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <!-- <script src="../js/bootstrap.min.js"></script> -->
</body>
</html>