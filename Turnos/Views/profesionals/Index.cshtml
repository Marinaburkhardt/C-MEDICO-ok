@model IEnumerable<Turnos.Models.profesional>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/estilos.css">
</head>
<body>
    <div class="Titulo mb-2">Profesionales Médicos</div>

    <div class="form-group row">
        <div class="col-12 text-center">
            <div class="row justify-content-around">
                <div class="col-12 col-sm-9 col-md-3">
                    <input class="btn btn-warning btn-block" type="button" name="cancel" value="Volver al menú principal" onClick="window.location='/';" />
                </div>
                <div class="col-12 col-sm-9 col-md-2">
                    <input class="btn btn-success btn-block" type="button" name="cancel" value="Nuevo Profesional" onClick="window.location='/profesionals/Create';" />
                </div>
            </div>
        </div>
    </div>

    <table class="table text-center">
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                DNI
            </th>
            <th>
                Teléfono
            </th>
            <th>
                Mail
            </th>
            <th>
                Matrícula
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.matricula)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idProfesional }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.idProfesional }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idProfesional })
                </td>
            </tr>
        }

    </table>
</body>
</html>
