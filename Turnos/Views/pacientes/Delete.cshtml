@model Turnos.Models.paciente

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/estilos.css">
</head>
<body>

    <div class="container text-center">
        <div class="Titulo">Seguro desea eliminar este paciente?</div>

        <div class="form-group row ">
            <div class="col-12 col-md-6 mb-3">
                Nombre: 
                @Html.DisplayFor(model => model.nombre)
            </div>
            <div class="col-12 col-md-6 mb-3">
                Apellido: 
                @Html.DisplayFor(model => model.apellido)
            </div>
        </div>

        <div class="form-group row ">
            <div class="col-12 col-md-6 mb-3">
                DNI: 
                @Html.DisplayFor(model => model.dni)
            </div>
            <div class="col-12 col-md-6 mb-3">
                Teléfono: 
                @Html.DisplayFor(model => model.telefono)
            </div>
        </div>

        <div class="form-group row ">
            <div class="col-12 col-md-6 mb-3">
                Mail: 
                @Html.DisplayFor(model => model.mail)
            </div>
            <div class="col-12 col-md-6 mb-3">
                Obra Social: 
                @Html.DisplayFor(model => model.obraSocial.nombre)
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <input type="submit" value="Cancelar" class="btn btn-grey" />
            <!--@Html.ActionLink("Back to List", "Index")-->
        </div>
        }
    </div>
</body>
</html>
