@model Turnos.Models.turno

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/estilos.css">
</head>
<body>

    <div class="container text-center">
        <div class="Titulo">Seguro desea eliminar este profesional?</div>

        <div class="form-group row ">
            <div class="col-12 col-md-6 mb-3">
                Paciente:
                @Html.DisplayFor(model => model.paciente.nombre)
            </div>
            <div class="col-12 col-md-6 mb-3">
                Profesional:
                @Html.DisplayFor(model => model.profesional.nombre)
            </div>
        </div>

        <div class="form-group row ">
            <div class="col-12 col-md-6 mb-3">
                Turno:

            </div>
        </div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group row">
                <div class="col-12 text-center">
                    <div class="row justify-content-center">
                        <div class="col-12 col-sm-9 col-md-4">
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                        </div>
                        <div class="col-12 col-sm-9 col-md-2">
                            <input class="btn btn-grey" type="button" name="cancel" value="Cancel" onClick="window.location='/pacientes';" />
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</body>
</html>
